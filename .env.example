# Variáveis de Ambiente - Copie e configure com seus valores

# === Evolution API ===
EVOLUTION_API_URL=sua-url-evolution-api.com
EVOLUTION_API_KEY=sua-chave-evolution
EVOLUTION_INSTANCE_NAME=nome-da-instancia

# === OpenAI API ===
OPENAI_API_KEY=sua-chave-openai-aqui
OPENAI_MODEL=gpt-4o

# === Configurações de Email (Para LEITURA de e-mails) ===
# Configure o e-mail que o sistema irá MONITORAR para capturar leads
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app-aqui  # Para Gmail: use senha de app (https://myaccount.google.com/apppasswords)
EMAIL_FROM=seu-email@gmail.com

# Configurações de monitoramento
EMAIL_CHECK_INTERVAL=5  # Intervalo em minutos entre verificações
EMAIL_MAX_PROCESS=10    # Máximo de e-mails a processar por vez

# === Notificações ===
ADMIN_WHATSAPP=5511999999999  # Número com DDI+DDD+Número
ADMIN_EMAIL=admin@suaempresa.com 

# === Banco de Dados ===
# Para SQLite (padrão):
DATABASE_URL=sqlite:///./crm_system.db

# Para PostgreSQL (descomente e configure):
# DATABASE_URL=postgresql://user:password@localhost/crm_db

# === FastAPI ===
API_HOST=0.0.0.0
API_PORT=8000
API_WEBHOOK_PATH=/webhook/evolution  # Path onde o webhook da Evolution API enviará as mensagens

# === Streamlit ===
STREAMLIT_PORT=8501
